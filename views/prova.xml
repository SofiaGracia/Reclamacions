<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.az_sedipualba.sedipualba</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="after">
                <div class="app_settings_block" data-string="Nuevo Apartado" string="Nuevo Apartado" data-key="nuevo_apartado">
                    <h2>Nuevo Apartado</h2>
                    <div class="row mt16 o_settings_container" id="nuevo_apartado_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="nuevo_campo"/><br/>
                                <field name="nuevo_campo"/>
                            </div>
                        </div>
                        <!-- Puedes agregar más campos aquí -->
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
