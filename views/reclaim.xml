<odoo>
  <data>

    <!-- explicit form and tree view definition -->

    <record id="view_reclaim_tree" model="ir.ui.view">
      <field name="name">az_reclaims.reclaim.tree</field>
      <field name="model">az_reclaims.reclaim</field>
      <field name="arch" type="xml">
        <tree string="Reclaims list">
          <field name="name" />
          <field name="damage_type" />
        </tree>
      </field>
    </record>

    <record id="view_reclaim_form" model="ir.ui.view">
      <field name="name">az_reclaims.reclaim.form</field>
      <field name="model">az_reclaims.reclaim</field>
      <field name="arch" type="xml">
        <form string="Reclaim Patrimonial Form">
          <sheet>
            <group>
              <group>
                <field name="damage_type" />
                <field name="other_damage" attrs="{'invisible': [('damage_type', '!=', 'otro')]}" />
                <field name="add_licences" />
                <field name="licenses" attrs="{'invisible': [('add_licences', '=', False)]}" widget="many2many_tags" />
              </group>
              <group>
                <field name="address_type" />
                <field name="un_address" attrs="{'invisible': [('address_type', '!=', 'no_estructurado')]}" />
              </group>  
            </group>
            <group name="address_attrs"
              attrs="{'invisible': [('address_type', '!=', 'estructurado')]}">
              <group>
              </group>
              <group>
                <field name="road_type" />
                <field name="road_name" />
                <field name="road_number" />
                <field name="floor" />
                <field name="staircase" />
                <field name="level" />
                <field name="door" />
                <field name="cad_ref" />
                <field name="polygon_parcel" />
              </group>
            </group>
            <group>
              <group>
                <field name="document_editor" />
                <field name="other_editor" attrs="{'invisible': [('document_editor', '!=', 'otro')]}" />
              </group>
              <group>
                <field name="amount" />
                <field name="damage_state" />
                <field name="other_state" attrs="{'invisible': [('damage_state', '!=', 'otro')]}" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="az_reclaims.action_reclaim_window">
      <field name="name">Reclamaciones</field>
      <field name="res_model">az_reclaims.reclaim</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>